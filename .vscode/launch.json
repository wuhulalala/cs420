{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'kecc'",
            "program": "${workspaceRoot}/target/debug/kecc",
            "args": [
                "-i",
                "examples/c/array.c"
            ],
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "C/C++ Runner: Debug Session",
            "type": "cppdbg",
            "request": "launch",
            "args": [],
            "stopAtEntry": false,
            "externalConsole": false,
            "cwd": "/home/liscopye/kecc-public/examples/c",
            "program": "/home/liscopye/kecc-public/examples/c/build/Debug/outDebug",
            "MIMode": "gdb",
            "miDebuggerPath": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}